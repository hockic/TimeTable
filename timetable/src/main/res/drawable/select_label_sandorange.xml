<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
           <item android:state_selected="true"> 
            <shape> 
                <gradient android:angle="270" android:endColor="@color/sandorange"
                    android:startColor="@color/sandorange" />
                <size android:height="60dp" android:width="320dp" />
            </shape> 
        </item> 
        <item android:state_pressed="true"> 
            <shape> 
                <gradient android:angle="270" android:endColor="@color/sandorange"
                    android:startColor="@color/sandorange"/>
                <size android:height="60dp" android:width="320dp" />
            </shape> 
        </item> 
        <item> 
            <shape> 
                <gradient android:angle="270" android:endColor="@color/sandorange_active"
                    android:startColor="@color/sandorange_active"/>
                <size android:height="60dp" android:width="320dp" />
            </shape> 
        </item>
</selector>